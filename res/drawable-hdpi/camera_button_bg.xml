<?xml version="1.0" encoding="utf-8"?>
<!-- Thanks! http://android.onyou.ch/2011/01/25/simple-custom-button-using-a-selector-xml-layout/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true"><shape>
            <stroke android:width="1px" android:color="#444" />

            <corners android:radius="18dp" />

            <gradient android:angle="270" android:endColor="#1c8622" android:startColor="#28b52f" />

            <corners android:radius="18dp" />
        </shape></item>

    <!-- focused -->
    <item android:state_focused="true"><shape>
            <stroke android:width="1px" android:color="#444" />

            <corners android:radius="18dp" />

            <gradient android:angle="270" android:endColor="#1c8622" android:startColor="#28b52f" />

            <corners android:radius="18dp" />
        </shape></item>

    <!-- default -->
    <item><shape>
            <gradient android:angle="270" android:endColor="#4fde53" android:startColor="#59f95d" />

            <stroke android:width="1px" android:color="#444" />

            <corners android:radius="18dp" />
        </shape></item>

</selector>