<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/secondaryProgress">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="#e0f4ff"
                android:centerY="0.75"
                android:endColor="#e0f4ff"
                android:startColor="#e0f4ff" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="#7ed3ff"
                android:centerY="0.75"
                android:endColor="#6fbce3"
                android:startColor="#aae0fc" />
        </shape>
    </item>

</layer-list>